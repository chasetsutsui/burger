<div class="container">
  <br>
  <br>
  <div class="text-center">
    <h1>Eat-Da-Burger!!!!</h1>

  </div>
  <br>
  <br>

  <div class="row">
    <div class="col-sm-4 burgers">

      <h2 class="text-center">Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <p><strong>{{this.id}}. {{this.burger_name}}</strong></p>
        {{> burgers/burger-block sleep=true}}
        <br>
        {{/unless}}
        {{/each}}

      </ul>

    </div>
    <div class="col-sm-4">
      <img class="img-fluid" src="/assets/burger.jpg.jpg" alt="burger">
    </div>
    <div class="col-sm-4 burgers">
      <h2 class="text-center">Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <p><strong>{{this.id}}. {{this.burger_name}}</strong></p>
        {{> burgers/burger-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>


    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-sm-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <input type="text" id="ca" name="name" placeholder="Burger:">
        </div>

        <div class="form-group">

          <button class="btn btn-dark" type="submit" value="0">Add Burger</button>
      </form>
    </div>
  </div>
</div>